  <environment_variables>
    <variable name="NEXT_PUBLIC_PTERODACTYL_URL">
      <description>Pterodactyl panel URL (no trailing slash)</description>
      <example>https://console.dragohost.cloud</example>
      <required>true</required>
    </variable>
    <variable name="PTERODACTYL_API_KEY">
      <description>Application API key from Pterodactyl</description>
      <example>ptla_lfjKW4bznNfGRxDXE7MvhDn9xf9kI4QqNcxiFjn9rgf</example>
      <required>true</required>
      <security>Server-side only (not prefixed with NEXT_PUBLIC_)</security>
    </variable>
    <variable name="NEXT_PUBLIC_DISCORD_URL">
      <description>Discord server permanent invite URL</description>
      <example>https://discord.gg/dragohost</example>
      <required>false</required>
    </variable>
    <variable name="NEXT_PUBLIC_STATS_REFRESH_INTERVAL">
      <description>Stats auto-refresh interval in milliseconds</description>
      <example>30000</example>
      <default>30000</default>
      <required>false</required>
    </variable>
    <variable name="NEXT_PUBLIC_USE_MOCK_DATA">
      <description>Use mock data instead of real API</description>
      <example>false</example>
      <default>false</default>
      <required>false</required>
    </variable>
  </environment_variables>

