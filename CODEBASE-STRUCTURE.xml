<project name="DragoHost" type="NextJS" version="1.0.0">

  <metadata>
    <description>Premium Minecraft Server Hosting Showcase with Real-time Pterodactyl Integration</description>
    <framework>Next.js 14 (App Router)</framework>
    <language>TypeScript</language>
    <styling>Tailwind CSS</styling>
    <animations>Framer Motion</animations>
    <api_integration>Pterodactyl Panel API</api_integration>
  </metadata>

  <architecture>
    <pattern>Component-Based Architecture</pattern>
    <rendering>Server-Side Rendering (SSR) + Client Components</rendering>
    <state_management>React Hooks</state_management>
    <data_fetching>Custom Hooks + Next.js API Routes</data_fetching>
    <styling_approach>Utility-First (Tailwind) + Custom Animations</styling_approach>
  </architecture>

  <directory_structure>
