  <troubleshooting>
    <issue name="API Connection Fails">
      <symptoms>Stats show dashes or error message</symptoms>
      <solutions>
        <solution>Verify API key has Read permissions for Servers and Users</solution>
        <solution>Check panel URL is correct (no trailing slash)</solution>
        <solution>Enable mock data for testing: NEXT_PUBLIC_USE_MOCK_DATA=true</solution>
        <solution>Check browser console for detailed error messages</solution>
      </solutions>
    </issue>
    <issue name="Build Errors">
      <symptoms>TypeScript or build failures</symptoms>
      <solutions>
        <solution>Clear Next.js cache: rm -rf .next</solution>
        <solution>Reinstall dependencies: rm -rf node_modules && npm install</solution>
        <solution>Run type check: npm run type-check</solution>
      </solutions>
    </issue>
    <issue name="Animations Not Working">
      <symptoms>Elements not animating on scroll</symptoms>
      <solutions>
        <solution>Check browser prefers-reduced-motion setting</solution>
        <solution>Verify Framer Motion is installed</solution>
        <solution>Check browser console for errors</solution>
      </solutions>
    </issue>
  </troubleshooting>

